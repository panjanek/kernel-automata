<Window x:Class="KernelAutomata.Gui.StartConditionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KernelAutomata.Gui"
        mc:Ignorable="d"
        Title="Start Conditions" 
        Height="450" 
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="False"
        Topmost="True"
        Opacity="1">
    <Border Background="#CC2B2B2B"
           CornerRadius="6"
           BorderBrush="#444"
           BorderThickness="3">
        <DockPanel>

            <!-- Custom Title Bar -->
            <Grid Height="32"
                 DockPanel.Dock="Top"
                 Background="#FF1E1E1E"
                 Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Name="titleBox"
                          Text="Kernel Configuration"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"
                          Foreground="White"
                          FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                       Content="x"
                       FontSize="14"
                       Foreground="White"
                       Background="Transparent"
                       BorderThickness="0"
                       Name="closeButton"
                       Cursor="Hand"/>
            </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 9 -->

                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="center X ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Center X of disk where random noise will be generated"/>
                    <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.centerX" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Tag="initialization.centerX"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="center Y ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Center Y of disk where random noise will be generated"/>
                    <Slider Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.centerY" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Tag="initialization.centerY"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="density Y ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Maximum value of random pixel"/>
                    <Slider Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.density" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Tag="initialization.density"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Noise radius ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Radius of disk where random noise will be generated"/>
                    <Slider Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="1.5" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.noiseRadius" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Tag="initialization.noiseRadius"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Blob radius ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Radius solid disk where pixels are set to 1"/>
                    <Slider Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="1.5" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.blobRadius" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="5" Grid.Column="2" Tag="initialization.blobRadius"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Gaussian noise µ ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="µ for gausian nose. If µ and σ are zeros, uniform noise is generated"/>
                    <Slider Grid.Row="6" Grid.Column="1" Minimum="0" Maximum="1.5" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.mu" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="6" Grid.Column="2" Tag="initialization.mu"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Gaussian noise σ ⓘ" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="σ for gausian nose. If µ and σ are zeros, uniform noise is generated"/>
                    <Slider Grid.Row="7" Grid.Column="1" Minimum="0" Maximum="1.5" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="initialization.sigma" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="7" Grid.Column="2" Tag="initialization.sigma"  FontFamily="Courier New" Margin="0,5,5,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>


                    <local:RasterImage Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" x:Name="image" Width="170" Height="170" Margin="5,5,0,0" ToolTip="Start conditions visualization"/>

                    <Button Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Click="CloseButton_Click" Margin="5">OK</Button>
                </Grid>
        </DockPanel>
    </Border>
</Window>
