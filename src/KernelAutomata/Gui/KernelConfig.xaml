<Window x:Class="KernelAutomata.Gui.KernelConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KernelAutomata.Gui"
        mc:Ignorable="d"
        Title="KernelConfig" 
        Height="800" 
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Opacity="0.95">
    <Border Background="#CC2B2B2B"
            CornerRadius="6"
            BorderBrush="#444"
            BorderThickness="3">
        <DockPanel>

            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Kernel Configuration"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="x"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="closeButton"
                        Cursor="Hand"/>
            </Grid>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 9 -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ring 1 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Ring 1" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap" Background="DarkGray"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="weight" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="1" Grid.Column="1" Minimum="-2" Maximum="2" SmallChange="0.001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="rings.0.weight" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Tag="rings.0.weight"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="center" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="2" Grid.Column="1" Minimum="0.001" Maximum="100" SmallChange="0.1" LargeChange="1" ValueChanged="Slider_ValueChanged" Tag="rings.0.center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Tag="rings.0.center"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="width" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="3" Grid.Column="1" Minimum="1" Maximum="100" SmallChange="0.1" LargeChange="1" ValueChanged="Slider_ValueChanged" Tag="rings.0.width" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Tag="rings.0.width"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="maxR" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="4" Grid.Column="1" Minimum="10" Maximum="256" SmallChange="0.1" LargeChange="1" ValueChanged="Slider_ValueChanged" Tag="rings.0.maxR" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Tag="rings.0.maxR"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="inner slope" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="5" Grid.Column="1" Minimum="0.1" Maximum="30" SmallChange="0.1" LargeChange="1" ValueChanged="Slider_ValueChanged" Tag="rings.0.innerSlope" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Tag="rings.0.innerSlope"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="outer slope" VerticalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="6" Grid.Column="1" Minimum="0.1" Maximum="30" SmallChange="0.1" LargeChange="1" ValueChanged="Slider_ValueChanged" Tag="rings.0.outerSlope" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="6" Grid.Column="2" Tag="rings.0.outerSlope"  Background="DimGray" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                
                <Button Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Click="CloseButton_Click">OK</Button>
            </Grid>
        </DockPanel>
    </Border>
</Window>
