<Window x:Class="KernelAutomata.Gui.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KernelAutomata.Gui"
        mc:Ignorable="d"
        Title="ConfigWindow" 
        Height="900" 
        Width="500"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="False"
        Opacity="1">

    <Window.Resources>
        <ContextMenu x:Key="kernelContextMenu">
            <MenuItem Header="Invert" Click="KernelContextMenu_Click"/>
            <MenuItem Header="Switch with">
                <MenuItem Header="← Left" Tag="-1,0" Click="KernelContextMenu_Click"/>
                <MenuItem Header="→ Right" Tag="1,0" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↑ Up" Tag="0,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↓ Down" Tag="0,1" Click="KernelContextMenu_Click"/>

                <MenuItem Header="↖ Diagonal" Tag="-1,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↗ Diagonal" Tag="1,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↘ Diagonal" Tag="1,1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↙ Diagonal" Tag="-1,1" Click="KernelContextMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Overwrite">
                <MenuItem Header="← Left" Tag="-1,0" Click="KernelContextMenu_Click"/>
                <MenuItem Header="→ Right" Tag="1,0" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↑ Up" Tag="0,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↓ Down" Tag="0,1" Click="KernelContextMenu_Click"/>

                <MenuItem Header="↖ Diagonal" Tag="-1,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↗ Diagonal" Tag="1,-1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↘ Diagonal" Tag="1,1" Click="KernelContextMenu_Click"/>
                <MenuItem Header="↙ Diagonal" Tag="-1,1" Click="KernelContextMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Transform">
                <MenuItem Header="Expand" Click="KernelContextMenu_Click"/>
                <MenuItem Header="Shrink" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="0" Header="Normalize To 0" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="1" Header="Normalize To 1" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="-1" Header="Normalize To -1" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="*1.2" Header="Normalize Up" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="*0.8" Header="Normalize Down" Click="KernelContextMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Set to preset">
                <MenuItem Tag="kernels.one-small-ring.json" Header="One small ring" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.one-medium-ring.json" Header="One medium ring" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.one-large-ring.json" Header="One large ring" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.two-standard-rings.json" Header="Two standard rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.two-narrow-rings.json" Header="Two narrow rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.two-wide-rings.json" Header="Two wide rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.three-standard-rings.json" Header="Three standard rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.three-large-rings.json" Header="Three large rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.four-rings.json" Header="Four rings" Click="KernelContextMenu_Click"/>
                <MenuItem Tag="kernels.five-rings.json" Header="Five rings" Click="KernelContextMenu_Click"/>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>



    <Border Background="#CC2B2B2B"
            CornerRadius="5"
            BorderBrush="#444"
            BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Configuration"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="─"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="minimizeButton"
                        Cursor="Hand"/>

            </Grid>

            <!-- Window Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
      
                <!-- top buttons -->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- https://learn.microsoft.com/en-us/windows/apps/design/style/segoe-ui-symbol-font -->
                    <Button Grid.Column="0" ToolTip="Save file" Click="SaveFile_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Text="&#xE105;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Grid.Column="1" ToolTip="Open file" Click="OpenFile_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Text="&#xE8E5;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Grid.Column="2" ToolTip="Restart" Click="Restart_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Text="&#xE895;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <DockPanel Background="LightGray"  Grid.Column="3">
                        <CheckBox x:Name="autoRestart" IsChecked="True" ToolTip="Automatically restart simulation after any parameter change" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" 
                           FontSize="14"
                           Text="&#xEC57;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                        </CheckBox>
                    </DockPanel>
                    <ComboBox Name="colorPicker" Grid.Column="4" SelectedIndex="1">
                        <ComboBoxItem>
                            <Border Width="35" Height="16" Background="Black" HorizontalAlignment="Center">
                                <TextBlock  Foreground="White" FontSize="10" Text="erase" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Border Width="35" Height="16" Background="Magenta" HorizontalAlignment="Center">
                                <TextBlock  Foreground="Black" FontSize="10" Text="draw" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Border Width="35" Height="16" Background="Cyan" HorizontalAlignment="Center">
                                <TextBlock  Foreground="Black" FontSize="10" Text="draw" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Border Width="35" Height="16" Background="Yellow" HorizontalAlignment="Center">
                                <TextBlock  Foreground="Black" FontSize="10" Text="draw" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ComboBoxItem>
                    </ComboBox>
                    <ToggleButton Name="recordButton" Grid.Column="5" ToolTip="Record frames as PNG files to given folder" Click="Record_Click">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <!-- Default: red circle -->
                                        <Ellipse Width="12"
                             Height="12"
                             Fill="Red"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <!-- When recording -->
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <!-- Stop: black square -->
                                                <Rectangle Width="12"
                                       Height="12"
                                       Fill="Black"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <Button Name="fullscreenButton" Grid.Row="0" Grid.Column="6" ToolTip="Fullscreen">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                           FontSize="14"
                           Text="&#xE740;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Name="undoButton" Grid.Row="1" Grid.Column="0" ToolTip="Undo" Tag="undo" Click="UndoRedo_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                           FontSize="14"
                           Text="&#xE7A7;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Name="redoButton" Grid.Row="1" Grid.Column="1" ToolTip="Redo" Tag="redo" Click="UndoRedo_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                           FontSize="14"
                           Text="&#xE7A6;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Name="decChannelsButton" Grid.Row="1" Grid.Column="2" Content="-1 ch" Tag="-1" Click="ChangeChannelsCount_Click" ToolTip="Increases number of channels by duplicating kernels and growth parameters"/>
                    <Button Name="incChannelsButton" Grid.Row="1" Grid.Column="3" Content="+1 ch" Tag="+1" Click="ChangeChannelsCount_Click" ToolTip="Decreases number of channels by removing channel, not changing existing configuration"/>
                    <Button Grid.Row="1" Grid.Column="4" Content="Preset" Name="presetButton" ToolTip="Loads preconfigured preset from list"/>
                    <Button Grid.Row="1" Grid.Column="5" ToolTip="Save single screen capture as PNG" Click="SaveScreenn_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                           FontSize="14"
                           Text="&#xE722;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="6" Content="?" Name="aboutButton" ToolTip="About..."/>
                </Grid>

                <!-- Field size -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Size ⓘ" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="10,5,5,0" Foreground="White" TextWrapping="Wrap" ToolTip="Size of the pixel space. Changing this will restart simulation with fixed preset"/>
                <ComboBox Name="fieldSize" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" SelectionChanged="global_SelectionChanged" Margin="0,5,10,0">
                    <ComboBoxItem>128x128</ComboBoxItem>
                    <ComboBoxItem>256x256</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">512x512</ComboBoxItem>
                    <ComboBoxItem>1024x1024</ComboBoxItem>
                    <ComboBoxItem>2048x2048</ComboBoxItem>
                    <ComboBoxItem>4096x4096</ComboBoxItem>
                    <ComboBoxItem>8192x8192</ComboBoxItem>
                </ComboBox>

                <!-- Number of channels -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Channels ⓘ" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="10,5,5,0" Foreground="White" TextWrapping="Wrap" ToolTip="Number of channels (colors)"/>
                <ComboBox Name="channelsCount" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" SelectionChanged="global_SelectionChanged" Margin="0,5,10,0">
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                </ComboBox>

                <!-- DT -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="step dt ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Integration step"/>
                <Slider Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0.001" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="dt" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Tag="dt"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- channels configuration -->
                <ScrollViewer Name="scroll" MaxHeight="885" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"  CanContentScroll="False">
                    <Grid Margin="10,0,0,0" Name="contentGrid"> <!--.Row="4" Grid.Column="0" Grid.ColumnSpan="3"> -->

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 9 -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- channel headers-->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Channels" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="Magenta" VerticalAlignment="Center" Margin="0,5,0,0" Padding="5" Background="Magenta" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                    <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Height="18" Width="18" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,5,5" Tag="channels.0" Click="StartingConditions_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="10" ToolTip="Configure staring condition"
                           Text="&#xEC88;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <TextBlock Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Text="Cyan" VerticalAlignment="Center" Margin="5,5,0,0" Padding="5" Background="Cyan" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                    <Button Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Height="18" Width="18" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,5,5" Tag="channels.1" Click="StartingConditions_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="10" ToolTip="Configure staring condition"
                           Text="&#xEC88;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>
                    <TextBlock Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="2" Text="Yellow" VerticalAlignment="Center" Margin="5,5,0,0" Padding="5" Background="Yellow" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                    <Button Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="2" Height="18" Width="18" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,5,5" Tag="channels.2" Click="StartingConditions_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="10" ToolTip="Configure staring condition"
                           Text="&#xEC88;"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Button>

                    <!-- spike 1 -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="growth µ ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White" ToolTip="µ parameter of Gaussian bell curve used as a growth function"/>
                    <Slider Grid.Row="6" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.mu" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="6" Grid.Column="2" Tag="channels.0.mu"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="6" Grid.Column="3" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.mu" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="6" Grid.Column="4" Tag="channels.1.mu"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="6" Grid.Column="5" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.2.mu" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="6" Grid.Column="6" Tag="channels.2.mu"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="growth σ ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White" ToolTip="σ parameter of Gaussian bell curve used as a growth function"/>
                    <Slider Grid.Row="7" Grid.Column="1" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.0.sigma" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="7" Grid.Column="2" Tag="channels.0.sigma"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="7" Grid.Column="3" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.1.sigma" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="7" Grid.Column="4" Tag="channels.1.sigma"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="7" Grid.Column="5" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.2.sigma" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="7" Grid.Column="6" Tag="channels.2.sigma"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <!-- spike 2 -->
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="2nd growth µ ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White" ToolTip="Optional µ parameter of second Gaussian bell curve added to growth function"/>
                    <Slider Grid.Row="8" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.mu2" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="8" Grid.Column="2" Tag="channels.0.mu2" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="8" Grid.Column="3" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.mu2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="8" Grid.Column="4" Tag="channels.1.mu2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="8" Grid.Column="5" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.2.mu2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="8" Grid.Column="6" Tag="channels.2.mu2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="2nd growth σ ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White" ToolTip="Optional σ parameter of second Gaussian bell curve added to growth function"/>
                    <Slider Grid.Row="9" Grid.Column="1" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.0.sigma2" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="9" Grid.Column="2" Tag="channels.0.sigma2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="9" Grid.Column="3" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.1.sigma2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="9" Grid.Column="4" Tag="channels.1.sigma2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="9" Grid.Column="5" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.2.sigma2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="9" Grid.Column="6" Tag="channels.2.sigma2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="2nd growth weight ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" Foreground="White" TextWrapping="Wrap" ToolTip="Optional weight of for second Gaussian bell curve added to growth function. If 1.0 - both curves contribute equally"/>
                    <Slider Grid.Row="10" Grid.Column="1" Minimum="0" Maximum="1.0" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.weight2" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="10" Grid.Column="2" Tag="channels.0.weight2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="10" Grid.Column="3" Minimum="0" Maximum="1.0" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.weight2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="10" Grid.Column="4" Tag="channels.1.weight2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="10" Grid.Column="5" Minimum="0" Maximum="1.0" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.2.weight2" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="10" Grid.Column="6" Tag="channels.2.weight2"  FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <!-- growth visualisation -->
                    <TextBlock Grid.Row="11" Grid.Column="0" Text="growth function ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Visualisation of growth function configured with above sliders"/>
                    <local:FunctionGraph Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" Tag="channels.0" Height="50" Margin="5,5,0,0" ToolTip="Growth function applied after convolutions"/>
                    <local:FunctionGraph Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="2" Tag="channels.1" Height="50" Margin="5,5,0,0" ToolTip="Growth function applied after convolutions"/>
                    <local:FunctionGraph Grid.Row="11" Grid.Column="5" Grid.ColumnSpan="2" Tag="channels.2" Height="50" Margin="5,5,0,0" ToolTip="Growth function applied after convolutions"/>

                    <!-- channel decay -->
                    <TextBlock Grid.Row="12" Grid.Column="0" Text="channel decay ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Optional decay coeficient. Each pixel value is decreased by multiply of this value"/>
                    <Slider Grid.Row="12" Grid.Column="1" Minimum="-1" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="channels.0.decay" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="12" Grid.Column="2" Tag="channels.0.decay" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="12" Grid.Column="3" Minimum="-1" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="channels.1.decay" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="12" Grid.Column="4" Tag="channels.1.decay" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>
                    <Slider Grid.Row="12" Grid.Column="5" Minimum="-1" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="channels.2.decay" Margin="5,5,0,0"/>
                    <TextBlock Grid.Row="12" Grid.Column="6" Tag="channels.2.decay" FontFamily="Courier New" Margin="0,5,0,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                    <!-- kernel of this channel -->
                    <TextBlock Grid.Row="13" Grid.Column="0" Grid.RowSpan="1" Text="Kernel of this channel ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Kernel used for convolution of the channel with itself"/>
                    <local:KernelConfigurator Tag="channels.0.kernels.0" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 1, Self" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[0].Kernels[0]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.1.kernels.0" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 2, Self" Grid.Row="13" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[1].Kernels[0]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.2.kernels.0" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 3, Self" Grid.Row="13" Grid.Column="5" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[2].Kernels[0]}" KernelDataCommitted="Configurator_DataChanged"/>

                    <!-- kernel of opposing channel -->
                    <TextBlock Grid.Row="14" Grid.Column="0" Grid.RowSpan="1" Text="Kernel for next channel channel ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Kernel used for convolution with contrary channel"/>
                    <local:KernelConfigurator Tag="channels.0.kernels.1" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 1, Contrary" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[0].Kernels[1]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.1.kernels.1" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 2, Contrary" Grid.Row="14" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[1].Kernels[1]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.2.kernels.1" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 3, Contrary" Grid.Row="14" Grid.Column="5" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[2].Kernels[1]}" KernelDataCommitted="Configurator_DataChanged"/>
                    
                    <!-- kernel of opposing channel -->
                    <TextBlock Grid.Row="15" Grid.Column="0" Grid.RowSpan="1" Text="Kernel for second next channel channel ⓘ" VerticalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Foreground="White" ToolTip="Kernel used for convolution with contrary channel"/>
                    <local:KernelConfigurator Tag="channels.0.kernels.2" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 1, 2nd Contrary" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[0].Kernels[2]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.1.kernels.2" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 2, 2nd Contrary" Grid.Row="15" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[1].Kernels[2]}" KernelDataCommitted="Configurator_DataChanged"/>
                    <local:KernelConfigurator Tag="channels.2.kernels.2" PreviewMouseRightButtonDown="KernelConfigurator_ContextMenu" KernelName="Channel 3, 2nd Contrary" Grid.Row="15" Grid.Column="5" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[2].Kernels[2]}" KernelDataCommitted="Configurator_DataChanged"/>
                </Grid>
                    </ScrollViewer>
            </Grid>
        </DockPanel>
    </Border>
</Window>
