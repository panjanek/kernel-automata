<Window x:Class="KernelAutomata.Gui.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KernelAutomata.Gui"
        mc:Ignorable="d"
        Title="ConfigWindow" 
        Height="900" 
        Width="500"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Opacity="0.85">
    <Border Background="#CC2B2B2B"
            CornerRadius="6"
            BorderBrush="#444"
            BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Configuration"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="─"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="minimizeButton"
                        Cursor="Hand"/>

            </Grid>

            <!-- Window Content -->
            <Grid Margin="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- 9 -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- 19 -->
                </Grid.RowDefinitions>

                <!-- Field size -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Field size" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Name="fieldSize" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" SelectionChanged="global_SelectionChanged">
                    <ComboBoxItem>128x128</ComboBoxItem>
                    <ComboBoxItem>256x256</ComboBoxItem>
                    <ComboBoxItem>512x512</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">1024x1024</ComboBoxItem>
                    <ComboBoxItem>4096x4096</ComboBoxItem>
                    <ComboBoxItem>8192x8192</ComboBoxItem>
                </ComboBox>

                <!-- Number of channels -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Field size" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Name="channelsCount" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" SelectionChanged="global_SelectionChanged">
                    <ComboBoxItem IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                </ComboBox>

                <!-- DT -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Integration step dt" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Minimum="0.001" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="dt" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="4" Tag="dt"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <!-- channel headers-->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Channels" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Magenta" VerticalAlignment="Center" Margin="0,0,8,0" Background="Magenta" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Text="Cyan" VerticalAlignment="Center" Margin="0,0,8,0" Background="Cyan" HorizontalAlignment="Stretch" TextAlignment="Center"/>

                <!-- spike 1 -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="growth µ" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.mu" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Tag="channels.0.mu"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="4" Grid.Column="3" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.mu" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="4" Grid.Column="4" Tag="channels.1.mu"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="growth σ" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.0.sigma" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Tag="channels.0.sigma"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="5" Grid.Column="3" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.1.sigma" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="5" Grid.Column="4" Tag="channels.1.sigma"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <!-- spike 2 -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="growth µ 2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Grid.Row="6" Grid.Column="1" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.mu2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="6" Grid.Column="2" Tag="channels.0.mu2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="6" Grid.Column="3" Minimum="0" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.mu2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="6" Grid.Column="4" Tag="channels.1.mu2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="growth σ 2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Grid.Row="7" Grid.Column="1" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.0.sigma2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="7" Grid.Column="2" Tag="channels.0.sigma2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="7" Grid.Column="3" Minimum="0" Maximum="0.3" SmallChange="0.0001" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Tag="channels.1.sigma2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="7" Grid.Column="4" Tag="channels.1.sigma2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="weight 2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Grid.Row="8" Grid.Column="1" Minimum="0" Maximum="1.0" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.0.weight2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="8" Grid.Column="2" Tag="channels.0.weight2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="8" Grid.Column="3" Minimum="0" Maximum="0.2" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="channels.1.weight2" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="8" Grid.Column="4" Tag="channels.1.weight2"  Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>

                <!-- growth visualisation -->
                <TextBlock Grid.Row="9" Grid.Column="0" Text="growth function" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap"/>
                <local:FunctionGraph Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Tag="channels.0" Height="50" Margin="5,5,0,0" />
                <local:FunctionGraph Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="2" Tag="channels.1" Height="50" Margin="5,5,0,0"/>

                <!-- channel decay -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="channel decay" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap"/>
                <Slider Grid.Row="10" Grid.Column="1" Minimum="-1" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="channels.0.decay" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="10" Grid.Column="2" Tag="channels.0.decay" Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                <Slider Grid.Row="10" Grid.Column="3" Minimum="-1" Maximum="1" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Tag="channels.1.decay" Margin="5,5,0,0"/>
                <TextBlock Grid.Row="10" Grid.Column="4" Tag="channels.1.decay" Background="DimGray" FontFamily="Courier New" Margin="5,5,0,0" VerticalAlignment="Center" FontSize="12" MouseDown="infoText_MouseDown"/>
                
                <!-- kernel of this channel -->
                <TextBlock Grid.Row="11" Grid.Column="0" Grid.RowSpan="1" Text="Kernel of this channel" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap"/>
                <local:KernelConfigurator Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[0].Kernels[0]}" KernelDataCommitted="Configurator_DataChanged"/>
                <local:KernelConfigurator Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[0].Kernels[1]}" KernelDataCommitted="Configurator_DataChanged"/>

                <!-- kernel of opposing channel -->
                <TextBlock Grid.Row="12" Grid.Column="0" Grid.RowSpan="1" Text="Kernel for opposite channel" VerticalAlignment="Center" Margin="0,0,8,0" TextWrapping="Wrap"/>
                <local:KernelConfigurator Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[1].Kernels[0]}" KernelDataCommitted="Configurator_DataChanged"/>
                <local:KernelConfigurator Grid.Row="12" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,5,0,0" DataContext="{Binding Channels[1].Kernels[1]}" KernelDataCommitted="Configurator_DataChanged"/>


            </Grid>
        </DockPanel>
    </Border>
</Window>
