<Window x:Class="KernelAutomata.Gui.RingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KernelAutomata.Gui"
        mc:Ignorable="d"
        Title="KernelConfig" 
        Height="400" 
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Opacity="0.95">
    <Border Background="#CC2B2B2B"
            CornerRadius="6"
            BorderBrush="#444"
            BorderThickness="3">
        <DockPanel>

            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Kernel Configuration"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="x"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="closeButton"
                        Cursor="Hand"/>
            </Grid>

            <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- 9 -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ring 1 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Ring 1" VerticalAlignment="Center" Margin="0,0,5,0" TextWrapping="Wrap" Background="LightGray" TextAlignment="Center"/>
                    <local:RingConfigurator Grid.Row="1" Grid.Column="0" DataContext="{Binding rings[0]}" DataCommitted="RingConfigurator_DataCommitted"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Ring 2" VerticalAlignment="Center" Margin="0,0,5,0" TextWrapping="Wrap" Background="LightGray" TextAlignment="Center"/>
                    <local:RingConfigurator Grid.Row="3" Grid.Column="0" DataContext="{Binding rings[1]}" DataCommitted="RingConfigurator_DataCommitted"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Ring 3" VerticalAlignment="Center" Margin="0,0,5,0" TextWrapping="Wrap" Background="LightGray" TextAlignment="Center"/>
                    <local:RingConfigurator Grid.Row="5" Grid.Column="0" DataContext="{Binding rings[2]}" DataCommitted="RingConfigurator_DataCommitted"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Ring 4" VerticalAlignment="Center" Margin="0,0,5,0" TextWrapping="Wrap" Background="LightGray" TextAlignment="Center"/>
                    <local:RingConfigurator Grid.Row="7" Grid.Column="0" DataContext="{Binding rings[3]}" DataCommitted="RingConfigurator_DataCommitted"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Ring 5" VerticalAlignment="Center" Margin="0,0,5,0" TextWrapping="Wrap" Background="LightGray" TextAlignment="Center"/>
                    <local:RingConfigurator Grid.Row="9" Grid.Column="0" DataContext="{Binding rings[4]}" DataCommitted="RingConfigurator_DataCommitted"/>

                    <Button Grid.Row="10" Grid.Column="0" Click="CloseButton_Click">OK</Button>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>
